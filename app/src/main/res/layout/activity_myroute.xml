<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyrouteActivity">

    <RadioGroup
        android:id="@+id/choose_group"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/choose_sanggye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="상계"/>

        <RadioButton
            android:id="@+id/choose_junggye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="중계"/>

        <RadioButton
            android:id="@+id/choose_hagye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="하계"/>

        <RadioButton
            android:id="@+id/choose_wolgye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="월계"/>

        <RadioButton
            android:id="@+id/choose_gongneung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="공릉"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/route_layout"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/route_recyclerview"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/activity_route_recycler">


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/route_name"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"/>

            <ImageView
                android:id="@+id/route_img"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:src="@drawable/s_circle" />

            <TextView
                android:id="@+id/route_address"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="나만의 코스"
            android:layout_gravity="center|left" />


        <android.widget.Button
            android:layout_margin="2dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/round"
            android:textSize="5pt"
            android:text="삭제"
            android:layout_gravity="center|right"/>

        <android.widget.Button
            android:layout_margin="2dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/round"
            android:textSize="5pt"
            android:text="선택 완료"
            android:layout_gravity="center|right"/>



    </LinearLayout>

    <ScrollView
        android:id="@+id/myroute_list_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </ScrollView>






</LinearLayout>
